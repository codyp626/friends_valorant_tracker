@page "/rank"
@using FriendsTracker.Components.Pages;

@if (_isLoading)
{
    <p>
        Loading...
    </p>
}
else
{
    <div class="mobile_fix">
        <div class="card">
            Rank
            @foreach (var player in _response.Ranks)
            {
                <div class="player">
                    <p class="player_name">@player.Name</p>
                    <img class="rank_icon" src=@player.CurrentData.Images.Small.ToString()>
                    <p class="rr_number">@player.GetRR(player.CurrentData.Elo) RR</p>
                </div>
            }
        </div>

        <div class="card">
            Card 2
        </div>

        <div class="card">
            Card 3
        </div>
    </div>
}